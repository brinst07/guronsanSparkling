<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="member">
	<typeAlias alias="memberVO" type="kr.or.ddit.vo.MemberVO" />
	
	<sql id="selectAll">
		select ROWNUM rnum, member.*
		from member
		WHERE MEM_DELETE = 'n'
	</sql>
	
	
	<select id="loginCheck" parameterClass="map" resultClass="memberVO">
		select *
		from member
		where mem_id = #mem_id# and
			  mem_pass = #mem_pass#
	</select>
	

	<insert id="insertMemberInfo" parameterClass="memberVO">
		insert into
		member(mem_id,mem_pass,mem_name,mem_zip,mem_regno1,mem_regno2,mem_add1,mem_add2,mem_hometel,mem_comtel,mem_hp,mem_mail,mem_job,mem_like,mem_calendar)
		values(#mem_id#,#mem_pass#,#mem_name#,#mem_zip#,#mem_regno1#,#mem_regno2#,#mem_add1#,#mem_add2#,#mem_hometel#,#mem_comtel#,#mem_hp#,#mem_mail#,#mem_job#,#mem_like#,#mem_calendar#)
	</insert>

	<select id="memberList" resultClass="memberVO">
		<include refid="selectAll"/>
	</select>
	
	<select id="memberSearch" parameterClass="map" resultClass="memberVO">
		<include refid="selectAll"/>
		<dynamic>
				<isNotEmpty property="search_keyword">
					<isNotEmpty property="search_keycode"  prepend="AND">
						$search_keyword$ LIKE '%'||#search_keycode#||'%'
					</isNotEmpty>
				</isNotEmpty>
				<isNotEmpty property="mem_add1" prepend="AND">
					mem_add1 = #mem_add1#
				</isNotEmpty>
				<isNotEmpty property="mem_add2" prepend="AND">
					mem_add2 = #mem_add2#
				</isNotEmpty>
				<isNotEmpty property="mem_hp" prepend="AND">
					mem_hp LIKE  '%'||#mem_hp#||'%'
				</isNotEmpty>
				<isNotEmpty property="mem_bir" prepend="AND">
					<isNotEmpty property="search_calendar">
					mem_bir LIKE '%'||#mem_bir#||'%' AND mem_calendar = #search_calendar#					
					</isNotEmpty>
				</isNotEmpty>
		</dynamic>
	</select>
	
	<update id="updateMemberInfo" parameterClass="memberVO">
		update member
		set
		mem_pass = #mem_pass#, mem_add1 = #mem_add1#, mem_add2 = #mem_add2#,
		mem_hometel = #mem_hometel#, mem_comtel = #mem_comtel#, mem_hp =
		#mem_hp#,
		mem_mail = #mem_mail#, mem_job = #mem_job#, mem_like =
		#mem_like#, mem_calendar = #mem_calendar# 
		where mem_id = #mem_id#
	</update>
	
	<update id="deleteMemberInfo">
		update member
		set mem_delete = 'y'
		where mem_id = #mem_id#
	</update>
	<select id="memberSearchId" parameterClass="map" resultClass="memberVO">
		<include refid="selectAll"/>
		AND mem_id = #mem_id#
	</select>
	
	<update id="memberUpdate" parameterClass="memberVO">
		update member
		set 
		mem_pass = #mem_pass#,
		mem_mail = #mem_mail#,
		mem_add1 = #mem_add1#,
		mem_add2 = #mem_add2#,
		mem_hp = #mem_hp#,
		mem_calendar = #mem_calendar#,
		mem_bir = #mem_bir#
		where
		mem_id = #mem_id#
	</update>
	
	<select id="count" resultClass="int">
		select count(*)
		from member
	</select>
	
	<select id="memberPageList" resultClass="memberVO" parameterClass="map">
		SELECT *
		FROM
		(<include refid="selectAll"/>) A
        <![CDATA[
        WHERE A.RNUM <= #startCount#
        AND   A.RNUM >= #endCount#
        ]]>
        ORDER BY A.RNUM DESC
	</select>
	
	<select id="selectByID" resultClass="memberVO" parameterClass="string">
		SELECT *
		FROM member
		WHERE mem_id = #mem_id#
	</select>
	
	<update id="deleteMember" parameterClass="map">
		update member 
		set MEM_DELETE = 'y' 
		where mem_id = #mem_id#
	</update>
	
	<select id="memberInfo" parameterClass="map" resultClass="memberVO">
		<include refid="selectAll"/>
		AND	MEM_ID = #mem_id#
		<dynamic prepend="AND">
			<isNotEmpty property="mem_pass">
				MEM_PASS = #mem_pass#
			</isNotEmpty>	
		</dynamic>
	</select>
</sqlMap>